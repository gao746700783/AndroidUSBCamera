<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <io.livekit.android.renderer.SurfaceViewRenderer
            android:id="@+id/renderer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <io.livekit.android.renderer.TextureViewRenderer
            android:id="@+id/local_camera"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="top|end"
            android:layout_margin="10dp" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/multi_camera_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/multi_camera_tip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="NO UVC CAMERAS"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>